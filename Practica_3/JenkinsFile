pipeline {
    agent any
    tools {
        nodejs "node"
        maven "Maven 3.8.4"
    }
    stages {
        stage ('git configure'){
            steps {
                git branch : 'main', url : 'https://github.com/sicmmar/SA-Practicas'
            }
        }

        stage ('install') {
            steps {
                dir('Practica_2/App'){
                    sh 'npm install'
                }
            }
        }

        stage ('test') {
            steps {
                dir('Practica_2/App'){
                    sh 'apt-get update'
                    sh 'wget https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb'
                    sh 'apt install -y ./google-chrome*.deb;'
                    sh 'export CHROME_BIN=/usr/bin/google-chrome'
                    sh 'ng test -- --no-watch --no-progress --browsers=ChromeHeadlessCI'
                }
            }
        }

        stage ('build') {
            steps {
                dir('Practica_2/App'){
                    sh 'npm run ng build --configuration="production" --optimization --build-optimizer'
                }
            }
        }

        stage('SonarQube analysis') {
            environment {
                scannerHome = tool 'ServerSonarQube'
            }
            steps {
                withSonarQubeEnv(credentialsId: 'SonarQubeToken', installationName: 'Practica4SonarQube') {
                    sh '''
                    ${scannerHome}/bin/sonar-scanner \
                    -D sonar.host.url=http://34.133.197.215:9000 \
                    -D sonar.projectKey=practica4 \
                    -D sonar.projectName=practica4 \
                    -D sonar.login=admin \
                    -D sonar.password=1897
                    '''
                }
            }
        }

        stage ('packing') {
            steps {
                dir('Practica_2/App/dist'){
                    sh 'zip -r app.zip ./'
                    sh 'cp app.zip /home/jenkins'
                    echo 'Se ha empaquetado'
                }
            }
        }
    }
}