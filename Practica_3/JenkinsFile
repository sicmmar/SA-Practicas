pipeline {
    agent any
    tools {
        nodejs "node"
        maven "Maven 3.8.4"
    }
    stages {
        stage ('git configure'){
            steps {
                git branch : 'main', url : 'https://github.com/sicmmar/SA-Practicas'
            }
        }

        stage ('install') {
            steps {
                dir('Practica_2/App'){
                    sh 'npm install'
                }
            }
        }

        stage ('test') {
            steps {
                dir('Practica_2/App'){
                    sh 'npm run test'
                }
            }
        }

        stage ('build') {
            steps {
                dir('Practica_2/App'){
                    sh 'npm run ng build --configuration="production" --optimization --build-optimizer'
                }
            }
        }

        stage ('deploy') {
            steps {
                dir('Practica_2/App'){
                    sh 'echo "mv dist/app/* /usr/share/nginx/html"'
                }
            }
        }

        stage('SonarQube analysis') {
            steps {
                dir('Practica_2/App/src/test'){
                    withSonarQubeEnv(credentialsId: 'SonarQubeToken', installationName: 'Practica4SonarQube') {
                        sh 'export MAVEN_HOME=/opt/maven'
                        sh 'export PATH=$PATH:$MAVEN_HOME/bin'
                        sh 'mvn --version'
                        sh 'mvn clean package sonar:sonar'
                    }
                }
            }            
        }
    }
}